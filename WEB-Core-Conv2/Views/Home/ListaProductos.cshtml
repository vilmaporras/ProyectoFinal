@model List<WEB_Core_Conv2.Models.Producto>
<form method="post">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Categoria</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Descripción</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var producto in Model)
                    {
                        <tr>
                            <td>@producto.IdCategoria</td>
                            <td>@producto.Nombre</td>
                            <td>@producto.Precio</td>
                            <td>@producto.Descripcion</td>
                            <td>
                                <a name="ver-descripcion" class="btn btn-success" href="javascript:void(0)">Ver Descripción</a>
                                <a class="btn btn-warning" href="@Url.Action("EditarProducto", new { IdProducto = producto.IdProducto, producto.IdCategoria, producto.Nombre, producto.Precio, producto.Descripcion})">Editar</a>
                                <a class="btn btn-danger" href="@Url.Action("EliminarProducto", new { IdProducto = producto.IdProducto, producto.IdCategoria, producto.Nombre, producto.Precio, producto.Descripcion})">Eliminar</a>

                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</form>
<div class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>$(".ver-descripcion").click(function(){
    $("#exampleModal").modal("show");
     }

     )</script>

}