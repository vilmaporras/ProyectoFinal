@model List<WEB_Core_Conv2.Models.Categoria>//Hace referencia al modelo categoria
<form method = "post">
<div class = "table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Fecha Creación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var categoria in Model)
                {
                    <tr>
                        <td>@categoria.Nombre</td>
                        <td>@categoria.Descripcion</td>
                        <td>@categoria.FechaCreacion.ToString("dd/MM/yyy")</td>
                        <td>
                        <a name="ver-descripcion" class="btn btn-success" href="javascript:void(0)">Ver Descripciòn</a>
                                 
                            <a class="btn btn-warning" href="@Url.Action("EditarCategoria", new { IdCategoria = categoria.IdCategoria, categoria.Nombre, Descripcion = categoria.Descripcion})">Editar</a>
                           <a class="btn btn-danger" href="@Url.Action("EliminarCategoria", new { IdCategoria = categoria.IdCategoria, categoria.Nombre, Descripcion = categoria.Descripcion})">Eliminar</a>

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div>
    <a class="btn btn-success" asp-action="Categoria">Agregar Nueva</a>
</div>
</form>
<div class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
@section Scripts{
  <script>
     $(".ver-descripcion").click(function(){
    $("#exampleModal").modal("show");
     }
     
     )
  </script>

}